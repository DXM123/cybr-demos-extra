{
	"info": {
		"_postman_id": "59c7e221-9660-49dd-8dd6-b7f488055317",
		"name": "Pull Variable - Conjur Cloud",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authenticate to PCloud",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseJson= pm.response.json();",
							"pm.environment.set(\"SessionId\",responseJson.Result.SessionId);",
							"pm.environment.set(\"MechanismId\",responseJson.Result.Challenges[0].Mechanisms[0].MechanismId)"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"User\": \"{{username}}\",\n    \"Version\": \"1.0\",\n    \"PlatformTokenResponse\": \"true\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://{{identity_url}}/Security/StartAuthentication",
					"protocol": "https",
					"host": [
						"{{identity_url}}"
					],
					"path": [
						"Security",
						"StartAuthentication"
					]
				}
			},
			"response": []
		},
		{
			"name": "Authenticate - Answer Challenge",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseJson= pm.response.json();",
							"pm.environment.set(\"Token\",responseJson.Result.Token);",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"SessionId\": \"{{SessionId}}\",\n    \"MechanismId\": \"{{MechanismId}}\",\n    \"Action\": \"Answer\",\n    \"Answer\": \"{{password}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://{{identity_url}}/Security/AdvanceAuthentication",
					"protocol": "https",
					"host": [
						"{{identity_url}}"
					],
					"path": [
						"Security",
						"AdvanceAuthentication"
					]
				}
			},
			"response": []
		},
		{
			"name": "Authenticate to Conjur",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.environment.set(\"conjur-authn-jwt\",pm.response.text());",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {
					"accept-encoding": true,
					"content-type": true
				}
			},
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept-Encoding",
						"value": "base64"
					},
					{
						"warning": "This is a duplicate header and will be overridden by the Content-Type header generated by Postman.",
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded",
						"type": "default"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "id_token",
							"value": "{{Token}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "https://{{tenant-name}}.secretsmgr.cyberark.cloud/api/authn-oidc/cyberark/conjur/authenticate",
					"protocol": "https",
					"host": [
						"{{tenant-name}}",
						"secretsmgr",
						"cyberark",
						"cloud"
					],
					"path": [
						"api",
						"authn-oidc",
						"cyberark",
						"conjur",
						"authenticate"
					]
				}
			},
			"response": []
		},
		{
			"name": "Pull Variable",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Token token=\"{{conjur-authn-jwt}}\"",
						"type": "default"
					}
				],
				"url": {
					"raw": "https://{{tenant-name}}.secretsmgr.cyberark.cloud/api/secrets/conjur/variable/{{variable-path}}",
					"protocol": "https",
					"host": [
						"{{tenant-name}}",
						"secretsmgr",
						"cyberark",
						"cloud"
					],
					"path": [
						"api",
						"secrets",
						"conjur",
						"variable",
						"{{variable-path}}"
					]
				}
			},
			"response": []
		}
	]
}